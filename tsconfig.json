{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "outDir": "./build",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*.ts",
    "src/renderer.js",
    "commands/*.json"
  ],
  "exclude": [
    "node_modules"
  ]
}